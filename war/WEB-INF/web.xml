<?xml version="1.0" encoding="UTF-8"?>
<web-app xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
	xsi:schemaLocation="http://java.sun.com/xml/ns/javaee http://java.sun.com/xml/ns/javaee/web-app_2_5.xsd"
	version="2.5" xmlns="http://java.sun.com/xml/ns/javaee">

	<servlet>
		<servlet-name>word</servlet-name>
		<servlet-class>com.lamboratory.threewordsaday.server.WordServiceImpl</servlet-class>
	</servlet>

	<servlet>
		<servlet-name>login</servlet-name>
		<servlet-class>com.lamboratory.threewordsaday.server.LoginServiceImpl</servlet-class>
	</servlet>

	<servlet-mapping>
		<servlet-name>word</servlet-name>
		<url-pattern>/threewordsaday/word</url-pattern>
	</servlet-mapping>

	<servlet-mapping>
		<servlet-name>login</servlet-name>
		<url-pattern>/threewordsaday/login</url-pattern>
	</servlet-mapping>

	<welcome-file-list>
		<welcome-file>Threewordsaday.html</welcome-file>
	</welcome-file-list>

</web-app>
